@model IEnumerable<SchoolManagementMVC.SchoolManagement.Web.Models.CourseViewModel>

@{
    ViewData["Title"] = "Courses List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Credits)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.Credits</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = course.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = course.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
